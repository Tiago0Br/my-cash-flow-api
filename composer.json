{
    "name": "tiagolopes/my-cash-flow-api",
    "description": "API para sistema de gestão de finanças",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Tiagolopes\\MyCashFlowApi\\": "src/"
        },
        "files": [
            "config/functions.php"
        ]
    },
    "authors": [
        {
            "name": "Tiago Lopes",
            "email": "tiagoltavares2002@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-pdo": "*",
        "zircote/swagger-php": "^5.1"
    },
    "scripts": {
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:3000 -t ./public"
        ],
        "migrate": "php bin/migrate.php",
        "migrate:create": "php bin/create-migration.php",
        "dev": [
            "@migrate",
            "@serve"
        ]
    }
}
